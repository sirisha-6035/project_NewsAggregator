          // C++ Program to Find the Factorial of a Number

          #include <iostream>
          using namespace std;

          int factorial(int n) {
              if (n == 0)
                  return 1;
              else
                  return n * factorial(n - 1);
          }

          int main() {
              int num = 5;
              cout << "Factorial of " << num << " is " << factorial(num) << endl;
